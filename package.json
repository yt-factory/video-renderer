{
  "name": "video-renderer",
  "version": "2.0.0",
  "description": "YT-Factory Video Renderer - JSON script to high-quality video",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "remotion studio",
    "preview": "npm run render:draft && npm run open:preview",
    "open:preview": "open ./output/*/video.mp4 || xdg-open ./output/*/video.mp4 2>/dev/null || echo 'No video found'",
    "render": "node render.mjs",
    "render:draft": "RENDER_PROFILE=draft node render.mjs",
    "render:preview": "RENDER_PROFILE=preview node render.mjs",
    "render:prod": "RENDER_PROFILE=production node render.mjs",
    "build": "tsc",
    "docker:build": "docker build -t video-renderer ./docker",
    "docker:render": "docker run -v $(pwd):/workspace video-renderer"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.4.0",
    "@remotion/bundler": "^4.0.0",
    "@remotion/cli": "^4.0.0",
    "@remotion/lottie": "^4.0.0",
    "@remotion/media-utils": "^4.0.410",
    "@remotion/player": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "dotenv": "^16.3.0",
    "fluent-ffmpeg": "^2.1.0",
    "framer-motion": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.0",
    "sharp": "^0.33.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
