# YT-Factory Video Renderer Environment Configuration

# ===========================================
# MOCK MODE - Enable for testing without APIs
# ===========================================
MOCK_MODE=true

# ===========================================
# Render Environment
# ===========================================
# Options: development | staging | production
RENDER_ENV=development

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info

# ===========================================
# TTS Providers (at least one required for production)
# ===========================================

# ElevenLabs (recommended for high quality)
# ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Google Cloud TTS
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure Speech Services
# AZURE_SPEECH_KEY=your_azure_speech_key
# AZURE_SPEECH_REGION=eastus

# ===========================================
# AI Image Generation (optional)
# ===========================================
ENABLE_AI_IMAGE_GENERATION=false
# OPENAI_API_KEY=your_openai_api_key

# ===========================================
# Chrome/Puppeteer (for Remotion)
# ===========================================
# Only set if not using default Chrome installation
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
# REMOTION_CHROME_EXECUTABLE_PATH=/usr/bin/chromium

# ===========================================
# Output Configuration
# ===========================================
OUTPUT_DIR=./output
TEMP_DIR=./temp

# ===========================================
# Render Quality Defaults
# ===========================================
DEFAULT_RENDER_PROFILE=draft
AUTO_PREVIEW=true
